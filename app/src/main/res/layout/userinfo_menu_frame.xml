<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <RelativeLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/usermenu_background2"
            >

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50.0dip"
                android:layout_centerHorizontal="true"

                >
                <com.nano.starchat2.Model.CircleImageView
                    android:id="@+id/userInfo_menu_headicon_id"
                    android:layout_width="@dimen/usermenu_headicon_rad"
                    android:layout_height="@dimen/usermenu_headicon_rad"
                    app:border_width="2dp"
                    app:border_color="@color/white"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="20dip">
                </com.nano.starchat2.Model.CircleImageView>
                <TextView
                android:id="@+id/userInfo_menu_headName_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:layout_below="@+id/userInfo_menu_headicon_id"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </TextView>
            </RelativeLayout>

            <ListView
                android:id="@+id/userInfo_menu_ListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:cacheColorHint ="#00000000"
                android:layout_marginTop="300dip"
            >
            </ListView>
        </RelativeLayout>

</FrameLayout>

    <!-- 用来存放滑动菜单打开后的视图界面的。 -->