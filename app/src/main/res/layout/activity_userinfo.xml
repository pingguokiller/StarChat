<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backcolor_grey_drawable"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/userinfo_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/backcolor_black_drawable"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/userinfo_title_titlename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/userinfo_icon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@drawable/backleftarrow"
            android:layout_alignBottom="@+id/userinfo_title_titlename"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/userinfo_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/userinfo_icon_back"
            android:layout_alignBottom="@+id/userinfo_title_titlename"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backcolor_white_drawable"
        android:layout_marginTop="10dip"
        >
        <ListView
            android:id="@+id/SelfInfo_ListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:cacheColorHint ="#00000000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            >
        </ListView>
    </RelativeLayout>

</LinearLayout>
